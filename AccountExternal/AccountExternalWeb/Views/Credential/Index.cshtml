
@{
    ViewBag.Title = "Index";
}

<div ng-controller="CredentialController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../Credential/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>CredentialId</th>
                        <th>IsActive</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="credential in model.Credentials" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(credential.CredentialId)" ng-init="model.UpdateEmployee(credential)">
                        <td><span ng-bind="credential.CredentialId"></span></td>
                        <td><span ng-bind="credential.IsActive"></span></td>
                        <td><span ng-bind="credential.Email"></span></td>
                        <td><span ng-bind="credential.Username"></span></td>    
                        @*<td>{{credential}}</td>*@
                        <td>
                            <ul>
                                <li ng-repeat="credentialRole in credential.CredentialRoles">
                                    <span ng-bind="credentialRole.Role.Name"></span>
                                </li>
                            </ul>
                        </td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(credential.CredentialId)"><span class="glyphicon glyphicon-edit"></span> Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(credential.CredentialId)"><span class="glyphicon glyphicon-trash"></span> Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>